@model IEnumerable<frontend_asp.Models.ProductDTO>;

<br/><br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-info">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">Create New Product</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model) {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.ProductCategory</td>
                    <td>@((item.ProductPrice).ToString("c"))</td>
                    <td>
                        <a asp-action="ProductEdit" class="btn btn-warning" asp-route-id="@item.ProductId">EditProduct</a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-id="@item.ProductId">DeleteProduct</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
